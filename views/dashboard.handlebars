<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
  <a href="/newpost"><button>Add a New Blog Post!</button></a>
</div>
  <div class="col-md-6">
    <h3>My Blog Posts:</h3>
    {{#if posts.length}}
    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <a href="/updatepost"><button class="btn btn-sm btn-danger update-btn" data-id="{{post.id}}">UPDATE</button></a>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger delete-btn" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{else}}
  <p>No posts written. Add one above!</p>
  {{/if}}
</div>

<script src="/js/dashboard.js"></script>



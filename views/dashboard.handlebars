<div class="card card-body dashboard-card">
<div class="row">
  <div class="col-auto">
    <h3>Welcome, {{username}}!</h3>
  </div>
  <a href="/newpost"><button class="btn">Add a New Blog Post!</button></a>
</div>
  <div class="col-md-6">
    <h4>My Blog Posts:</h4>
    {{#if posts.length}}
    {{#each posts as |post|}}
    <div class="row mb-2">
        <div class="col-md-8">
        <h5><a href="/post/{{post.id}}">{{post.title}}</a></h5>
        <a href="/updatepost/{{post.id}}"><button class="btn btn-sm update-btn" data-id="{{post.id}}">UPDATE</button></a>
        <button class="btn btn-sm delete-btn" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{else}}
  <p>No posts written. Add one above!</p>
  {{/if}}
</div>
</div>

<script src="/js/dashboard.js"></script>



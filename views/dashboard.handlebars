{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>Written by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.content}}
    </p>
  </div>
  <div>
    <ul>
    {{#each comments as |comment| }}
    {{!-- TODO: debug user.name --}}
     <li>{{comment_text}}<p>-{{user.name}}</p><p>{{format_date date_created}}</p></li>
    {{/each}}
    </ul>
  </div>
</div>
{{/each}}
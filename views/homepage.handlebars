{{!-- View for homepage --}}
<div class="d-flex justify-content-center w-auto align-items-center">
<div class="row m-5 post-card card">
{{#each posts as |post| }}
  <div class="card-body">
    <h5 class="card-title"><a href="/post/{{post.id}}">{{post.title}}</a></h5>
    <h6 class="card-subtitle mb-2 text-muted fst-italic">Written by {{post.user.name}} on {{format_date post.date_created}}</h6>
    <p class="card-text">{{post.content}}</p>
  </div>
  {{#each comments as |comment| }}
  <div class="comment-card">
    <ul class="list-group-flush">  
    {{!-- TODO: debug user.name --}}
     <li class="list-group-item">{{comment_text}}<p>-{{user.name}}</p><p>{{format_date date_created}}</p></li> 
    </ul>
  </div>
  {{/each}}
{{/each}}
</div>
</div>

<script src="/js/comment.js"></script>